<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.instagram.user.model.mapper.UserMapper">
    <!-- 전체 사용자 조회 -->
    <select id="selectAllUsers" resultType="User">
        SELECT *
        FROM users
        ORDER BY user_id DESC
    </select>

    <!-- id를 이용한 사용자 조회 -->
    <select id="selectUserById" parameterType="int" resultType="User">
        SELECT *
        FROM users
        WHERE user_id= #{userId}
    </select>

    <!-- 유저 명칭을 이용한 사용자 조회 -->
    <select id="selectUserByUserName" parameterType="User" resultType="String">
        SELECT user_name
        FROM users
        WHERE user_name= #{userName}
    </select>

    <!-- email 을 이용한 사용자 조회 -->
    <select id="selectUserByUserEmail" parameterType="String" resultType="User">
        SELECT *
        FROM users
        WHERE user_email= #{userEmail}
    </select>

    <!-- 사용자 생성 -->
    <insert id="insertUser" parameterType="User" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO users (user_name, user_email, user_password, user_fullname, user_avatar)
        VALUES (#{userName},#{userEmail},#{userPassword},#{userFullname},#{userAvatar})
    </insert>

    <!-- 사용자 수정 -->
    <update id="updateUser" parameterType="User">
        UPDATE users
        SET user_name = #{userName},
            user_email = #{userEmail},
            user_fullname = #{userFullname},
            user_avatar = #{userAvatar},
            updated_at = CURRENT_TIMESTAMP
        WHERE user_id = #{userId}
    </update>

    <!-- 사용자 삭제 -->
    <delete id="deleteUser" parameterType="User">
        DELETE
        FROM users
        WHERE user_id = #{userId}
    </delete>

    <!-- 유저 이름으로 검색 -->
    <!--
        1. id: searchUsersByUserName
        2. parameterType: String
        3. resultType: User
        4. LIKE 검색 사용 (CONCAT 함수 활용)
        5. user_name 기준 오름차순 정렬
        6. 최대 10개만 조회 (LIMIT 사용)
        7. 비밀번호 제외하고 필요한 컬럼만 SELECT
    -->
    <select id="searchUsersByUserName" parameterType="String" resultType="User">
        SELECT user_name, user_id, user_email, user_fullname, user_avatar
        FROM users
        WHERE user_name LIKE CONCAT('%', #{query}, '%')
        ORDER BY user_fullname
        LIMIT 10

    </select>

    <!-- 유저네임으로 정확히 일치하는 유저 조회 -->
    <!--
        1. id: selectUserByUserNameExact
        2. parameterType: String
        3. resultType: User
        4. WHERE user_name = #{userName} 조건 사용
        5. 모든 컬럼 조회
    -->
    <select id="selectUserByUserNameExact" parameterType="String" resultType="User">
        SELECT user_name, user_id, user_email, user_fullname, user_avatar
        FROM users
        WHERE user_name = #{userName}
    </select>
</mapper>